{
  "name": "react-sldr",
  "version": "1.0.0-alpha.3",
  "description": "Resposive slider component for React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "tsc",
    "build:css": "lessc src/styles.less dist/styles.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "tslint --fix -p ./tsconfig.json",
    "lint:css": "stylelint --fix src/*.less",
    "dev": "parcel serve example/index.html --port 8888 --out-dir example/output",
    "test": "jest",
    "test:update": "npm test -- --updateSnapshot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RomiC/slide-r.git"
  },
  "keywords": [
    "react",
    "slider",
    "responsive"
  ],
  "author": "Roman Charugin <i@charugin.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RomiC/slide-r/issues"
  },
  "homepage": "https://github.com/RomiC/slide-r#readme",
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/react": "^16.9.11",
    "@types/react-test-renderer": "^16.9.1",
    "jest": "^24.9.0",
    "less": "^3.10.3",
    "parcel-bundler": "^1.12.4",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-test-renderer": "^16.11.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "react": "^15.3.0 || ^16.0.0"
  }
}